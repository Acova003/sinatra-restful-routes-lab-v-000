<h1>Create a Recipe</h1>

<form action="/recipes" method="POST">
  <p>
    <label for="name">Name</label>
    <input type="text" name="title" />
  </p>
  <p>
    <label for="ingredients">Ingredients</label>
    <textarea name="content"></textarea>
  </p>
  <input type="submit" id="submit" />
</form>